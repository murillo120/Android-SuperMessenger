<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF0083FE">


    <ProgressBar
            android:id="@+id/progress_firebase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:indeterminateTint="#FFF"
            app:layout_constraintTop_toBottomOf="@+id/btn_profilephoto"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible"
            android:indeterminate="true"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/et_name"/>

    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Name"
            android:ems="10"
            android:padding="7dp"
            android:id="@+id/et_name"
            android:layout_marginStart="8dp"
            android:tooltipText="How can we call you ?"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            android:background="@drawable/shape_et"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_profilephoto"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="E-mail"
            android:padding="7dp"
            android:ems="10"
            android:id="@+id/et_email"
            android:tooltipText="please provide your E-mail, you'ill need to log in our App"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            android:layout_marginTop="32dp"
            android:background="@drawable/shape_et"
            app:layout_constraintTop_toBottomOf="@+id/et_name"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="password"
            android:padding="7dp"
            android:tooltipText="create a password for your Account, it should have 8 characters minimum"
            android:id="@+id/et_password"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.494"
            android:background="@drawable/shape_et"
            app:layout_constraintTop_toBottomOf="@+id/et_email"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:inputType="textPassword"/>
    <Button
            android:text="Complete registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_complete"
            android:hint="Password"
            android:textColor="#FFF"
            android:padding="10dp"
            android:background="@drawable/shape_buttons"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/et_password"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.262"/>
    <TextView
            android:text="Already registered? log in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/flat_btn_go_to_login"
            android:textColor="#FFF"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_complete" app:layout_constraintHorizontal_bias="0.497"/>
    <Button
            android:text="Select your profile photo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/btn_profilephoto"
            android:textColor="#FFF"
            android:background="@drawable/shape_imgbutton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btn_photo"
            app:civ_border_width="1dp"
            app:civ_border_color="#000"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="@+id/btn_profilephoto"
            app:layout_constraintTop_toTopOf="@+id/btn_profilephoto"
            app:layout_constraintEnd_toEndOf="@+id/btn_profilephoto"
            app:layout_constraintBottom_toBottomOf="@+id/btn_profilephoto"/>


</android.support.constraint.ConstraintLayout>